@model ADSBackend.Models.Class

@{
    ViewData["Title"] = "Index";
}

<div class="ibox">
    <div class="ibox-title">
        <h2>Details | Classes</h2>
        <p>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </p>
    </div>
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TeacherName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RoomNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JoinCode)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.TeacherName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Period.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ClassName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.RoomNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.JoinCode)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@Model.ClassId" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@Model.ClassId" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
