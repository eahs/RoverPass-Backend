@model ADSBackend.Models.HomeViewModels.HomeViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="ibox">
    <div class="ibox-title">
        <h2>@Model.User.FullName's Dashboard</h2>
    </div>
    <div class="ibox-content">
        <p>Account Type: Admin</p>
        <a href="#" class="btn btn-primary">
            <span class="fa fa-gear"></span> Settings 
        </a>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
<div class="row">
    <div class="col-lg-4">
        <div class="ibox">
            <a href="/Pass">
                <div class="widget white-bg p-lg text-center">
                    <div class="nav-label">
                        <i class="fa fa-ticket fa-4x"></i>
                        <h3 class="font-bold no-margins">
                            Passes
                        </h3>
                        <small>Create a pass here.</small>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="ibox">
            <a href="/Pass">
            <div class="widget white-bg p-lg text-center">
                <div class="nav-label">
                    <i class="fa fa-users fa-4x"></i>
                    <h3 class="font-bold no-margins">
                        Classes
                    </h3>
                    <small>View classes here.</small>
                </div>
            </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="ibox">
            <a href="/Configuration">
            <div class="widget white-bg p-lg text-center">
                <div class="nav-label">
                    <i class="fa fa-cog fa-4x"></i>
                    <h3 class="font-bold no-margins">
                        Configuration
                    </h3>
                    <small>Change settings here.</small>
                </div>
            </div>
            </a>
        </div>
    </div>
</div>
}
