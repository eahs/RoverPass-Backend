@model IEnumerable<ADSBackend.Models.RestrictedRoom>

@{
    ViewData["Title"] = "Index";
}

<div class="ibox">
    <div class="ibox-title">
        <h2>Room Restrictions</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    </div>
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IssuedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RoomNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RestrictionType)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IssuedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassName.ClassName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomNumber.RoomNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RestrictionType)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.RestrictedRoomId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.RestrictedRoomId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.RestrictedRoomId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>