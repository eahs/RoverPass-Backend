@model IEnumerable<ADSBackend.Models.Pass>

@{
    ViewData["Title"] = "Index";
}

<div class="ibox">
    <div class="ibox-title">
        <h2>Create Passes</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    </div>
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Reason)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SignInTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SignOutTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PassType.Name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Reviewer)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reason)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayNameFor(model => item.SignInTime)
                            </td>
                            <td>
                                @Html.DisplayNameFor(model => item.SignOutTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PassType.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reviewer.FirstName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PassId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.PassId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.PassId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>